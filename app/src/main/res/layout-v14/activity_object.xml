<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.shems.mobile.ObjectActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/object_visualization_title"
            android:id="@+id/labelObjVisualizationTitle"
            android:layout_gravity="center_horizontal"
            android:textIsSelectable="false"
            android:textColor="#4d4d4d"
            android:textSize="20sp"
            android:enabled="true"
            android:singleLine="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Object Name"
            android:id="@+id/textObjName"
            android:textColor="#4d4d4d"
            android:textSize="22sp"
            android:paddingTop="21dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="176dp"
            android:text="New Text"
            android:id="@+id/textObjDescription"
            android:paddingTop="15dp"
            android:textColor="#4d4d4d"
            android:textSize="18dp"
            android:minLines="7" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switchOnOff"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textOff="OFF"
            android:textOn="ON"/>

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/buttonObjChart"
            android:scaleType="fitXY"
            android:src="@drawable/linechart"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp" />

    </LinearLayout>

</RelativeLayout>
