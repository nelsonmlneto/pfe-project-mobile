<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.shems.model.ObjectActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/object_visualization_title"
            android:id="@+id/labelObjVisualizationTitle"
            android:layout_gravity="center_horizontal"
            android:textIsSelectable="false"
            android:textColor="#4d4d4d"
            android:textStyle="bold"
            android:textSize="23sp"
            android:enabled="true"
            android:singleLine="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Object Name"
            android:id="@+id/textObjName"
            android:textColor="#4d4d4d"
            android:textSize="20sp"
            android:paddingTop="21dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textObjDescription"
            android:paddingTop="15dp"
            android:textColor="#4d4d4d"
            android:textSize="15dp"
            android:minLines="8" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Switch"
            android:id="@+id/switch1" />
    </LinearLayout>

</RelativeLayout>
